.aside
	width 25%
	display inline-block
	vertical-align top
	&-headline
		font-weight bold
		font-family RobotoBold 
		color #485254
		margin-left 34px
		margin-top 26px
		text-transform uppercase
		font-size 18px
.aside
	&__menu, &__menu_bot
		margin-top 30px
		li
			position relative
			cursor pointer 
			padding-left 34px
			&:hover
				background #cfd8dc
	.list__items
		display inline-block
		padding 20.5px 0
		font-family SourceSemibold
		font-size 18px
		color #485254
	img
		display inline-block
		margin-right 22px
	&__menu
		li:nth-child(2)
			&:after
					content '24+'
					position absolute
					color #656c6d
					font-size 18px
					font-family SourceRegular
					right 30px
					top 18px
			.list__items:nth-child(2)
				position relative
				&:before 
					content ''
					position absolute
					background #8bc34a
					width 13px
					height 13px
					top 12px
					left -32px
					border-radius 50%
.user-account
	margin-top 72px
	display flex
	align-items center 
	margin-left 34px
	&__avatar
		background url('../img/aside_img/profile-img.png') no-repeat
		width 55px
		height 55px
		margin-right 22px
		cursor pointer 
	&__name
		font-family 'SourceSemibold'
		font-size 22px 
		color #485254
		margin-right 48px
		cursor pointer 
	&__icons
		background url('../img/aside_img/profile-icon.png') no-repeat
		width 18px
		height 18px
		cursor pointer 