.wrapper-main
	background #f5f5f5
	padding-bottom 28px
	font-size 0
.main
	display inline-block
	width 75%
	padding-left 34px
	margin-top 53px
	&-headline
		font-family RobotoBold
		overflow hidden
		width 97% 
		h2
			font-size 20px
			color #485254
			float left
		h3
			font-size 19px
			color #959899
			float right
.main-block
	display inline-block
	width 22%
	margin-right 3%
	margin-top 42px
	font-family RobotoRegular
	&__text
		font-size 16px
		color #485254
		position relative
		margin-top 18px
		&:before
			content ''
			position absolute
			background url('../img/main_img/icon_min.png')
			width 12px
			height 12px
			top 2px
			right 1px
	.main-block__content
		margin-top 7px
	&__buttom
		font-size 13px
		color #fff
		background #64b5f6
		border none
		float left
		padding 6px 30px
		border-radius 2px
		cursor pointer 
	&__span 
		font-size 15px
		vertical-align middle
		float right
		margin-top 5px
		color #8f9191
.main-block__wrapp
	.main-block:nth-child(1)
		.main-block__buttom
			background #ff5722
			padding 6px 35px
.block-bott
	display inline-block
	width 22%
	margin-right 3%
	margin-top 74px
	&__wrapper
		padding 0 13px
	&__headline
		font-family RobotoBold
		font-size 18px 
		color #485254
		position relative
		&:before
			content ''
			position absolute
			background url('../img/main_img/icon_pep.png')
			width 13px
			height 13px
			right 6px
			top 3px
	&__text
		color #485254
		font-family RobotoLight
		font-size 13px
		margin-top 14px
		font-weight Light
	&__account
		background #64b5f6
		padding 8px 20px
		border-bottom-left-radius 5px
		border-bottom-right-radius 5px
		margin-top 25px
		position relative
		&:before
			content ''
			position absolute
			background #000
			width 22px
			height 22px
			top -12px
			right 19px
			border-radius 10px
			background #64b5f6
	&__afatar
		display inline-block
		margin-right 20px
	&__wrap
		margin-top 10px
		display inline-block
		vertical-align top
	&__name
		font-family RobotoBold
		font-weight bold
		font-size 13px
		color #fff
	&__position
		font-family RobotoLight
		font-size 13px 
		color #fff
.bloc-col__bot
	.block-bott:nth-child(2)
		.block-bott__account
			background #8bc34a
			&:before
				background #8bc34a
	.block-bott:nth-child(3)
		.block-bott__account
			background #ff5722
			&:before
				background #ff5722